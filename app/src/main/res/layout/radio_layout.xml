<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ListView
        android:id="@+id/lv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </ListView>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            style="@style/RadioButton"
            android:drawableTop="@drawable/icon1_selector"
            android:text="首页" />

        <RadioButton
            style="@style/RadioButton"
            android:drawableTop="@drawable/icon2_selector"
            android:text="标签" />

        <RadioButton
            style="@style/RadioButton"
            android:drawableTop="@drawable/icon3_selector"
            android:text="我的" />

        <RadioButton
            style="@style/RadioButton"
            android:drawableTop="@drawable/icon4_selector"
            android:text="我的" />
    </RadioGroup>


</LinearLayout>